<Window x:Class="CetStudents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CetStudents"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel Margin="10">
        <Label Content="Öğrenci No" Name="lblStudentIdShow"/>
        <Label Content="" Name="lblStudentId"/>
        <Label Content="Öğrenci Adı" Name="lblStudentNameShow"/>
        <TextBox Text="" TextWrapping="Wrap" Name="txtStudentName" />
        <Label Content="Öğrenci Soyadı" Name="lblStudentSurNameShow"/>
        <TextBox Text="" TextWrapping="Wrap" Name="txtStudentSurname" />
        <Label Content="Öğrenci Doğum Tarihi" Name="lblStudentBDShow"/>
        <DatePicker Name="dtpBirthDate"/>
        <Button Content="Ekle" Name="btnSave" Click="Button_Click"/>
        <Button Content="Güncelle" Name="btnUpdate" Click="btnUpdate_Click"></Button>

        <Button Content="Sil" Name="btnDelete" Click="btnDelete_Click"></Button>
        <Button Name="btnOpenCourses" Content="Ders Sayfasını Aç" Click="btnOpenCourses_Click" />
        <DataGrid Name="dgStudents" Height="311" SelectedCellsChanged="dgStudents_SelectedCellsChanged"/>
       


    </StackPanel>
</Window>
